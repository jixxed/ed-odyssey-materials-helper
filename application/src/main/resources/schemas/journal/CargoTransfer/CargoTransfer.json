{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "description": "When transferring cargo between ship and fleet carrier, or between ship and SRV",
  "extends" : { "$ref": "../_Event.json"},
  "allOf": [{ "$ref": "../_Event.json"}],
  "properties" : {
    "Transfers" : {
      "title" : "Transfers",
      "type" : "array",
      "default": null,
      "items" : {
        "type" : "object",
        "properties" : {
          "Type" : {
            "title" : "Type",
            "type" : "string",
            "examples" : [ "drones", "metaalloys", "platinum" ]
          },
          "Type_Localised" : {
            "title" : "Type_Localised",
            "type" : "string",
            "examples" : [ "Limpet", "Meta-Alloys", "Thargoid Biological Matter" ]
          },
          "Count" : {
            "title" : "Count",
            "type" : "integer",
            "examples" : [ 1, 3, 52 ]
          },
          "Direction" : {
            "title" : "Direction",
            "type" : "string",
            "examples" : [ "toship", "tocarrier", "tosrv" ]
          },
          "MissionID" : {
            "title" : "MissionID",
            "type" : "integer",
            "examples" : [ 895910576, 895910565, 897152407 ]
          }
        },
        "additionalProperties" : false,
        "required" : [ "Type", "Count", "Direction" ]
      }
    }
  },
  "additionalProperties" : false,
  "required" : [ "Transfers" ]
}
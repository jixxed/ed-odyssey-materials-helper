{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "description": "When Written: when buying a new ship in the shipyard",
  "extends" : { "$ref": "Event.json" },
  "properties" : {
    "ShipType" : {
      "title" : "ShipType",
      "type" : "string",
      "examples" : [ "asp", "anaconda", "sidewinder" ]
    },
    "ShipType_Localised" : {
      "title" : "ShipType_Localised",
      "type" : "string",
      "examples" : [ "Asp Explorer", "Krait Phantom", "Type-7 Transporter" ]
    },
    "ShipPrice" : {
      "title" : "ShipPrice",
      "type" : "integer",
      "examples" : [ 5995039, 132272506, 6494626 ]
    },
    "StoreOldShip" : {
      "title" : "StoreOldShip",
      "description": "If storing old ship",
      "type" : "string",
      "examples" : [ "Asp", "Type9", "Anaconda" ]
    },
    "StoreShipID" : {
      "title" : "StoreShipID",
      "description": "If storing old ship",
      "type" : "integer",
      "examples" : [ 5, 34, 1 ]
    },
    "MarketID" : {
      "title" : "MarketID",
      "type" : "integer",
      "examples" : [ 128666762, 128803246, 3226858240 ]
    },
    "SellOldShip" : {
      "title" : "SellOldShip",
      "description": "If selling current ship",
      "type" : "string",
      "examples" : [ "Type9" ]
    },
    "SellShipID" : {
      "title" : "SellShipID",
      "description": "If selling current ship",
      "type" : "integer",
      "examples" : [ 24 ]
    },
    "SellPrice" : {
      "title" : "SellPrice",
      "description": "If selling current ship",
      "type" : "integer",
      "examples" : [ 56166444 ]
    }
  },
  "additionalProperties" : false,
  "required" : [ "ShipType", "ShipPrice", "MarketID" ]
}